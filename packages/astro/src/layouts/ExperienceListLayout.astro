---
import Container from "@/components/Container.astro";
import RootLayout from "./RootLayout.astro";
import MobileHeader from "@/components/MobileHeader.astro";
import type { ComponentProps } from "astro/types";
import type BaseHead from "@/components/BaseHead.astro";

type Props = ComponentProps<typeof BaseHead>;
---

<RootLayout {...Astro.props}>
  <div class="z-10 sticky top-0 w-full bg-white dark:bg-slate-900 xl:hidden">
    <Container class="mx-auto px-2.5">
      <MobileHeader />
    </Container>
  </div>
  <div class="sticky top-10 xl:top-0 bg-slate-50 dark:bg-slate-800">
    <Container class="w-full mx-auto px-0 xl:ml-8">
      <slot name="experience-type-list" />
    </Container>
  </div>
  <slot name="experience-list" />
</RootLayout>

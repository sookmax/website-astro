---
import "@/styles/global.css";
import BaseHead from "@/components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "@/consts";
import Header from "@/components/Header.astro";
import Main from "@/components/Main.astro";
import MobileFooter from "@/components/MobileFooter.astro";
---

<html lang="en" class="h-full bg-white antialiased">
  <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  <body class="min-h-full">
    <Header
      class="hidden xl:flex xl:fixed xl:inset-y-0 xl:left-0 xl:w-[360px] 2xl:w-[400px]"
    />
    <Main
      class="xl:relative xl:mb-28 xl:ml-[360px] xl:border-t-0 2xl:ml-[400px]"
      ><slot /></Main
    >
    <MobileFooter />
  </body>
</html>

---
import "@/styles/global.css";
import BaseHead from "@/components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "@/consts";
import Header from "@/components/Header.astro";
import Main from "@/components/Main.astro";
---

<html lang="en" class="h-full bg-white dark:bg-slate-950 antialiased">
  <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  <body class="min-h-full">
    <Header
      class="hidden xl:flex xl:fixed xl:inset-y-0 xl:left-0 xl:w-[400px] 2xl:w-[450px]"
    />
    <Main class="pb-24 xl:pb-12 xl:relative xl:ml-[400px] 2xl:ml-[450px]"
      ><slot /></Main
    >
  </body>
</html>

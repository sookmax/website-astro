---
import { cn } from "@website/shared/utils";
import AboutSection from "./AboutSection.astro";
import AvatarImage from "./AvatarImage.astro";
import ConnectSection from "./ConnectSection.astro";

type Props = {
  class?: string;
};

const { class: className } = Astro.props;
---

<div class={cn("space-y-5", className)}>
  <AvatarImage />
  <div class="text-center xl:text-left">
    <p class="flex flex-col">
      <span class="text-xl font-bold text-gray-900">Hi, I'm Sook.</span>
      <span class="text-lg/8 font-medium text-gray-700">A web developer.</span>
    </p>
  </div>
  <AboutSection />
  <ConnectSection />
</div>

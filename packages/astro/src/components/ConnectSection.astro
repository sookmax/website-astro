---
import type { HTMLAttributes } from "astro/types";
import TinyWaveFormIcon from "./TinyWaveFormIcon.astro";
import GithubSvg from "@/images/github.svg";
import LinkedInSvg from "@/images/linkedin.svg";

type Props = HTMLAttributes<"section">;
---

<section {...Astro.props}>
  <h2 class="flex items-center font-mono text-sm/7 font-medium text-slate-900">
    <TinyWaveFormIcon
      colors={["fill-slate-300", "fill-primary-base"]}
      class="h-2.5 w-2.5"
    />
    <span class="ml-2.5">Connect</span>
  </h2>
  <ul role="list" class="mt-4 flex gap-10 font-medium text-slate-700">
    {
      (
        [
          ["GitHub", "https://github.com/sookmax", GithubSvg],
          [
            "LinkedIn",
            "https://www.linkedin.com/in/sukkyu-sook-chung/",
            LinkedInSvg,
          ],
        ] as const
      ).map(([label, url, Icon]) => (
        <li class="flex">
          <a
            href={url}
            target="_blank"
            class="group/social-link flex items-center space-x-2"
            aria-label={label}
          >
            <Icon class="size-6 fill-slate-400 group-hover/social-link:fill-slate-600" />
            <span class="text-sm text-gray-600">{label}</span>
          </a>
        </li>
      ))
    }
  </ul>
</section>

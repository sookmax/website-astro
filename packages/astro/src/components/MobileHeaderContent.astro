---
import IntroSection from "./IntroSection.astro";
import WaveForm from "./WaveForm.astro";

const date = new Date();
const currentYear = date.getFullYear();
---

<header class="relative bg-slate-50 pt-10 pb-7">
  <WaveForm
    id="mobile-header-waveform"
    class="absolute top-0 left-0 h-20 w-full"
  />
  <div class="mx-auto max-w-lg px-5">
    <IntroSection class="flex flex-col" />
    <div class="mt-10 text-left text-xs font-mono text-slate-400">
      <span>&copy; {currentYear} Sukkyu Chung.</span>
    </div>
  </div>
</header>

---
import AboutSection from "@/components/AboutSection.astro";
import ConnectSection from "@/components/ConnectSection.astro";
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import MainLayoutImage from "@/components/MainLayoutImage.astro";
---

<header
  class="bg-slate-50 lg:fixed lg:inset-y-0 lg:left-0 lg:flex lg:w-96 lg:items-start lg:overflow-y-auto"
>
  <Breadcrumbs />
  <div
    class="relative z-10 mx-auto px-4 pt-10 pb-4 sm:px-6 md:max-w-2xl md:px-4 lg:min-h-full lg:flex-auto lg:border-x lg:border-slate-200 lg:px-8 lg:py-12"
  >
    <MainLayoutImage />
    <div class="mt-10 text-center lg:mt-12 lg:text-left">
      <p class="text-xl font-bold text-slate-900">
        <a href="/">Hi, I'm Sook.</a>
      </p>
      <p class="mt-3 text-lg/8 font-medium text-slate-700">
        A data analyst turned rogue. Now I'm happy as a web developer...
        <span class="font-light text-slate-400">or am I really?</span>
      </p>
    </div>
    <AboutSection class="mt-12 hidden lg:block" />
    <ConnectSection class="mt-10 lg:mt-12" />
  </div>
</header>

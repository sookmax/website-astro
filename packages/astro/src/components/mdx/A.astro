---
import { cn } from "@website/shared/utils";
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;
const { class: className, target, href, ...rest } = Astro.props;
---

<a
  class={cn(
    "font-normal hover:text-primary-base dark:hover:text-primary-light",
    "decoration-dotted hover:decoration-primary-light underline underline-offset-1",
    className
  )}
  href={href}
  target={typeof href === "string" && href.startsWith("http")
    ? "_blank"
    : undefined}
  {...rest}><slot /></a
>

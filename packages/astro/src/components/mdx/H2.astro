---
import { cn } from "@website/shared/utils";
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"h2">;

const { class: className, id, ...rest } = Astro.props as Props;
---

<h2
  id={id}
  class={cn([
    "scroll-m-28 xl:scroll-m-8 text-xl 2xl:text-2xl",
    "flex items-center text-slate-900 dark:text-slate-50",
    "before:shrink-0 before:mr-2 before:h-4 before:w-2 before:rounded-r-full",
    "before:bg-indigo-500 dark:before:bg-indigo-300",
    className,
  ])}
  {...rest}
>
  <a
    href={`#${id}`}
    class="not-prose hover:underline hover:after:content-['#'] hover:after:text-xl"
  >
    <slot />
  </a>
</h2>

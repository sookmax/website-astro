---
import type { HTMLAttributes } from "astro/types";

type Props = {
  colors: string[];
} & HTMLAttributes<"svg">;

const { colors, ...props } = Astro.props as Props;
---

<svg aria-hidden="true" viewBox="0 0 10 10" {...props}>
  {
    colors.length === 1 ? 
    <path d="M6 1a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V1Z" class={colors[0]}></path> : 
    <path d="M0 5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V5Z" class={colors[0]}></path>
    <path d="M6 1a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V1Z" class={colors[1]}></path>
  }
</svg>

---
import CircleSVG from "@/images/circle.svg";
import { cn } from "@website/shared/utils";

type Props = {
  dot?: boolean;
  style?: 1 | 2 | 3 | 4 | 5;
  class?: string;
  size?: "small" | "normal";
};

const {
  dot = false,
  style = 1,
  size = "normal",
  class: className,
} = Astro.props;
---

<span
  class={cn([
    "inline-flex items-center gap-x-1.5 rounded-md px-1.5 py-0.5 text-xs font-medium",
    size === "small" && "text-2xs/tight gap-x-1",
    style === 1 &&
      "text-slate-400 dark:text-slate-300 bg-primary-2x-light/40 dark:bg-primary-2x-light/20 ring-1 ring-inset ring-slate-200 dark:ring-slate-600",
    style === 2 &&
      "text-slate-200 dark:text-slate-800 bg-primary-base dark:bg-primary-light",
    style === 3 &&
      "text-slate-200 dark:text-slate-800 bg-indigo-600 dark:bg-indigo-300",
    style === 4 &&
      "text-slate-200 dark:text-slate-800 bg-emerald-500 dark:bg-emerald-300",
    style === 5 &&
      "text-slate-200 dark:text-slate-800 bg-pink-500 dark:bg-pink-300",
    className,
  ])}
>
  {
    dot && (
      <CircleSVG
        class={cn([
          "size-1.5",
          size === "small" && "size-1",
          style === 1 &&
            "fill-primary-extralight/60 dark:fill-primary-2x-light",
          style === 2 && "fill-primary-extralight",
          style === 3 && "fill-indigo-200",
          style === 4 && "fill-emerald-200",
        ])}
      />
    )
  }
  <slot />
</span>
